<%= simple_form_for @user, url: users_path do |f| %>
  <%= f.label :name, "Nome" %>
  <%= f.input :name, label: false, placeholder: 'Digite o seu nome...', required: true %>
  <%= f.label :name, "Email" %>
  <%= f.input :email, label: false, placeholder: 'Digite o seu nome...', required: true %>
  <%= f.label :name, "CPF" %>
  <%= f.input :cpf, label: false, placeholder: 'Digite o seu nome...', required: true %>
  <%= f.label :name, "CNS" %>
  <%= f.input :cns, label: false, placeholder: 'Digite o seu nome...', required: true %>
  <%= f.label :name, "Senha" %>
  <%= f.input :password, label: false, placeholder: 'Digite o seu nome...', required: true %>

  <%= f.submit %>
<% end %>
